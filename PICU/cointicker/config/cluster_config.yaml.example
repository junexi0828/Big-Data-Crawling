# 클러스터 설정 파일
# 사용 전 cluster_config.yaml로 복사하여 실제 값으로 수정하세요

cluster:
  name: "cointicker-cluster"

  # 마스터 노드 설정
  master:
    hostname: "raspberry-master"
    ip: "192.168.1.100"
    user: "pi"
    ssh_port: 22

  # 워커 노드 설정
  workers:
    - hostname: "raspberry-worker1"
      ip: "192.168.1.101"
      user: "pi"
      ssh_port: 22
    - hostname: "raspberry-worker2"
      ip: "192.168.1.102"
      user: "pi"
      ssh_port: 22
    - hostname: "raspberry-worker3"
      ip: "192.168.1.103"
      user: "pi"
      ssh_port: 22

# Hadoop 설정
hadoop:
  version: "3.4.1"
  home: "/opt/hadoop"
  hdfs:
    namenode: "hdfs://raspberry-master:9000"
    replication: 3
  yarn:
    resourcemanager: "raspberry-master:8032"

# Scrapy 설정
scrapy:
  project_name: "cointicker"
  log_level: "INFO"
  concurrent_requests: 16
  download_delay: 1

